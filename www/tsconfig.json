{
  "extends": "@1/typescript-config/next.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "src",
    "declaration": false,
    "declarationMap": false,
    "emitDecoratorMetadata": true,
    "exactOptionalPropertyTypes": false,
    "experimentalDecorators": true,
    "paths": {
      "~/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../01/core/di.ts",
    "../01/core/ui/register.tsx",
    "../01/core/ui/registry.tsx",
    "../01/core/ui/context_injection.tsx"
  ],
  "exclude": [".next", "node_modules"],
  "references": [{ "path": "../01/core" }, { "path": "../01/modules" }]
}
