{
  "extends": "@1/typescript-config/next.json",
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": false,
    "declarationMap": false,
    "paths": {
      "~/*": ["*"],
      "@/*": ["*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../@1/ui/components/Card.tsx",
    "../@1/ui/components/DotIndicator.tsx"
  ],
  "exclude": [".next", "node_modules"]
}
