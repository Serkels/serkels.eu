{
  "extends": "@strapi/typescript-utils/tsconfigs/server",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@1/core_/domain": ["../../01/core_/dist/domain"],
      "~/*": ["*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": ["@bn-digital/strapi-types", "bun-types"]
  },
  "include": ["./", "./**/*.ts", "src/**/*.json"],
  "exclude": [
    "node_modules/",
    "build/",
    "dist/",
    ".cache/",
    ".turbo/",
    ".tmp/",
    "src/admin/",
    "**/*.test.*",
    "src/plugins/**"
  ],
  "references": [{ "path": "../../01/modules" }]
}
