{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["CI", "NODE_ENV"],
  "pipeline": {
    "@1.infra/database#build": { "cache": false },
    "@1.modules/auth.api#type-check": { "dependsOn": ["^build"] },
    "build": {
      "dependsOn": ["^build", "^type-check", "type-check"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "clean": { "cache": false },
    "dev": { "cache": false, "dependsOn": ["^build"] },
    "lint": { "cache": false, "dependsOn": ["^build"] },
    "type-check": { "outputs": ["node_modules/.cache/tsc/**"] }
  }
}
