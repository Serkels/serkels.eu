{
  "extends": "@1/typescript-config/next.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "src",
    "declaration": false,
    "declarationMap": false,
    "emitDecoratorMetadata": true,
    "exactOptionalPropertyTypes": false,
    "experimentalDecorators": true,
    "paths": {
      "~/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "typeRoots": [],
    "types": []
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  // "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [".next", "_", "node_modules", "**/*.test.ts"],
  "references": [{ "path": "../core" }, { "path": "../modules" }]
}
