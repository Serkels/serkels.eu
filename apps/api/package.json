{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:server": "bun --watch src/server.ts",
    "dev": "run-p dev:* --print-label",
    "start": "node dist/server.js",
    "build": "esbuild src/server.ts --bundle --packages=external --platform=node --format=esm --outdir=dist --sourcemap",
    "lint": "eslint --cache --ext \".js,.ts,.tsx\" --report-unused-disable-directives src",
    "type-check": "tsc"
  },
  "dependencies": {
    "@toctocorg/api": "workspace:*",
    "@toctocorg/greeting": "workspace:*",
    "@trpc/client": "^10.40.0",
    "@trpc/react-query": "^10.40.0",
    "@trpc/server": "^10.40.0",
    "cors": "^2.8.5",
    "ws": "^8.0.0",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/node": "^20.8.2",
    "@types/ws": "^8.2.0",
    "esbuild": "^0.18.16",
    "eslint": "^8.40.0",
    "npm-run-all": "^4.1.5",
    "tsx": "^3.12.7",
    "typescript": "^5.2.2"
  }
}
