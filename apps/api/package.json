{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:server": "tsx watch src/server",
    "dev": "run-p dev:* --print-label",
    "start": "node dist/server.js",
    "build": "esbuild src/server.ts --bundle --packages=external --platform=node --format=esm --outdir=dist --sourcemap",
    "lint": "eslint --cache --ext \".js,.ts,.tsx\" --report-unused-disable-directives src",
    "type-check": "tsc"
  },
  "dependencies": {
    "@trpc/client": "^10.40.0",
    "@trpc/react-query": "^10.40.0",
    "@trpc/server": "^10.40.0",
    "ws": "^8.0.0",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.16.16",
    "@types/ws": "^8.2.0",
    "esbuild": "^0.17.10",
    "eslint": "^8.40.0",
    "npm-run-all": "^4.1.5",
    "start-server-and-test": "^1.12.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.3",
    "wait-port": "^1.0.1"
  }
}
